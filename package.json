{
    "name": "@glen-84/commitlint-config-app",
    "version": "1.0.0",
    "description": "A shareable commitlint config for applications.",
    "author": "Glen Ainscow",
    "main": "index.js",
    "files": [
        "index.js"
    ],
    "scripts": {
        "format": "prettier --write index.js"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*.js": "prettier --check"
    },
    "devDependencies": {
        "@glen-84/prettier-config": "^2.1.3",
        "lint-staged": "^11.0.0",
        "prettier": "^2.2.1",
        "simple-git-hooks": "^2.4.1"
    },
    "peerDependencies": {
        "@commitlint/cli": "^12.1.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/glen-84/commitlint-config-app.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "license": "MIT",
    "prettier": "@glen-84/prettier-config"
}
